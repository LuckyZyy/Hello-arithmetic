package com.guangyu.zhnagyuanyuan;

import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class Test1 {
	/**
	 * @param args
	 * 求字符串内最长不重复的子串长度是多少，输入 "abcabcbb", 不重复子串最大为3，
	 * 测试数据：aaabjkkjbaa,asdasdasdddaamm,sdffdgss,aaaaaabbbbbb,xcvvvvvvbbbb
	 */
	 public int getMaxStrLength(String str){
		  Map<Character,Integer> map=new HashMap<Character,Integer>();  
	        int maxLength=0;  //max length
	        int cur=0;  
	        for(int i=0;i<str.length();i++){  
	            if(map.containsKey(str.charAt(i))){  
	                cur=Math.max(map.get(str.charAt(i))+1,cur);  
	                if((i-cur+1)>maxLength){  
	                    maxLength=i-cur+1;  
	                }  
	            }else{  
	                if((i-cur+1)>maxLength){  
	                    maxLength=i-cur+1;  
	                }  
	            }  
	            map.put(str.charAt(i), i);  
	        }  
	        return maxLength;  
	 }
	 
	 public static void main(String[] args) {
		Test1 t = new Test1();
		 Scanner in = new Scanner(System.in);
	     System.out.println ("输入一个字符串:");
	     String  str = in.nextLine();
		System.out.println(t.getMaxStrLength(str));
	}

}
